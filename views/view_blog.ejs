<html>
    <head>
        <%- include('./partials/head') %>
    </head>
    <body>
        <%- include('./partials/navbar') %>
        <div class="container mt-5">
            <center>
                <h1><%= blog.title %></h1>
                <img src="<%= blog.coverImageUrl %>" alt="" width="700px" height="500px">
                <pre width="1000px"><%= blog.body %></pre>
            </center>
        </div>

        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageUrl %>" width="50px" alt="Profile Image"> <%= blog.createdBy.fullName %>
        </div>

        <div class="container mt-3">
            <h1>Comments (<%= comments.length%>)</h1>
            <% if(locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input type="text" class="form-control" name="content" placeholder="Enter your comment">
                    </div>
                    <button type="submit" class="btn btn-primary">Add comment</button>
                </form>
            <% } %>
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                    <div>
                        <img src="<%= comment.createdBy.profileImageUrl %>" width="50px" alt="Profile Image"> <%= comment.createdBy.fullName %> <pre><%= comment.content %></pre>
                    </div>
                <% }) %>
            </div>
            
        </div>

        <%- include('./partials/scripts') %>
    </body>
</html>